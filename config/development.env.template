# Nova NIC Development Environment Template
# ==========================================
# Optimized for local development and debugging

# === SECURITY ===
SECRET_KEY=dev-secret-key-not-for-production
NOVA_CACHE_SECRET=dev-cache-secret

# Disable token requirement for easier testing
NOVA_REQUIRE_TOKEN=0

# === LLM CONFIGURATION ===
OLLAMA_BASE_URL=http://127.0.0.1:11434/v1
OLLAMA_URL=http://127.0.0.1:11434
NOVA_LLM_LLAMA=llama3.2:3b
NOVA_LLM_OSS=qwen2.5-coder:7b
NOVA_USE_NATIVE_LLM=0

# === RETRIEVAL ===
NOVA_HYBRID_SEARCH=1
NOVA_BM25_K1=1.5
NOVA_BM25_B=0.75
NOVA_BM25_CACHE=1
NOVA_DOMAIN_BOOST=1

# === SAFETY ===
NOVA_GAR_ENABLED=1
NOVA_CITATION_AUDIT=0
NOVA_ANOMALY_DETECTOR=0

# === CACHING ===
# Disable caching for development (see fresh results)
NOVA_ENABLE_RETRIEVAL_CACHE=0
NOVA_RETRIEVAL_CACHE_SIZE=64

# === LOGGING ===
# Text format for easier reading in terminal
NOVA_LOG_FORMAT=text
NOVA_LOG_LEVEL=DEBUG
NOVA_LOG_FILE=logs/nova.log

# Enable SQL logging for debugging
NOVA_ENABLE_SQL_LOG=1

# === RATE LIMITING ===
# Disable rate limiting for development
NOVA_RATE_LIMIT_ENABLED=0

# === PERFORMANCE ===
# Skip warmup for faster restarts
NOVA_WARMUP_ON_START=0

# Smaller batch size for quicker debugging
NOVA_EMBED_BATCH_SIZE=16

# === ENVIRONMENT ===
NOVA_ENV=development
